<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.orange.familylink"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <provider android:name="org.orange.familylink.database.ContactsProvider"
            android:authorities="org.orange.familylink.provider"
            android:exported="false">
        </provider>
        <provider android:name="org.orange.familylink.database.MessagesProvider"
            android:authorities="org.orange.familylink.provider"
            android:exported="false">
        </provider>
        <!-- The main/home activity (has no parent activity) -->
        <activity
            android:name="org.orange.familylink.MainActivity"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data android:name="android.support.UI_OPTIONS"
                   android:value="splitActionBarWhenNarrow" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.orange.familylink.SettingsActivity"
            android:label="@string/settings" >
        </activity>
    </application>

</manifest>
