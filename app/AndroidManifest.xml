<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.orange.familylink"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <application
        android:name="org.holoeverywhere.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <provider android:name="org.orange.familylink.database.ContactsProvider"
            android:authorities="org.orange.familylink.provider.contactsprovider"
            android:exported="false"
            android:multiprocess="true">
        </provider>
        <provider android:name="org.orange.familylink.database.MessagesProvider"
            android:authorities="org.orange.familylink.provider.messagesprovider"
            android:exported="false"
            android:multiprocess="true">
        </provider>

        <!-- 短信发送状态Receiver -->
        <receiver android:name=".sms.SmsStatusReceiver" />
        <!-- 开机启动的Receiver，用于开启Service -->
        <receiver android:name=".location.BootBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.REBOOT" />
            </intent-filter>
        </receiver>

        <!-- The main/home activity (has no parent activity) -->
        <activity
            android:name="org.orange.familylink.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.orange.familylink.SettingsActivity"
            android:label="@string/settings" >
        </activity>

        <service android:name=".location.LocationService" />

    </application>

</manifest>
