<PreferenceScreen xmlns:holo="http://schemas.android.com/apk/res-auto" >

    <EditTextPreference
        holo:key="password"
        holo:title="@string/pref_title_password"
        holo:summary="@string/pref_summary_password" />

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        holo:key="role"
        holo:title="@string/pref_title_role"
        holo:entries="@array/pref_role_titles"
        holo:entryValues="@array/pref_role_values"
        holo:negativeButtonText="@null"
        holo:positiveButtonText="@null" />

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        holo:key="sync_frequency"
        holo:defaultValue="60"
        holo:title="@string/pref_title_sync_frequency"
        holo:layout="?attr/preferenceLayoutChild"
        holo:entries="@array/pref_sync_frequency_titles"
        holo:entryValues="@array/pref_sync_frequency_values"
        holo:negativeButtonText="@null"
        holo:positiveButtonText="@null" />

    <PreferenceCategory
        holo:title="@string/pref_notifications" >

        <!--
             A 'parent' preference, which enables/disables child preferences (below)
             when checked/unchecked.
        -->
        <CheckBoxPreference
            holo:key="notifications_new_message"
            holo:defaultValue="true"
            holo:title="@string/pref_title_new_message_notifications" />

        <!-- Allows the user to choose a ringtone in the 'notification' category. -->
        <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
        <!-- NOTE: RingtonePreference's summary should be set to its value by the activity code. -->
        <RingtonePreference
            holo:key="notifications_new_message_ringtone"
            holo:defaultValue="content://settings/system/notification_sound"
            holo:title="@string/pref_title_ringtone"
            holo:dependency="notifications_new_message"
            holo:layout="?attr/preferenceLayoutChild"
            holo:ringtoneType="notification" />

        <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
        <CheckBoxPreference
            holo:key="notifications_new_message_vibrate"
            holo:defaultValue="true"
            holo:title="@string/pref_title_vibrate"
            holo:dependency="notifications_new_message"
            holo:layout="?attr/preferenceLayoutChild" />

    </PreferenceCategory>

    <PreferenceCategory
        holo:title="@string/pref_title_others">

        <Preference
            holo:title="@string/status_activity_label">
            <intent
                holo:targetPackage="org.orange.familylink"
                holo:targetClass="org.orange.familylink.StatusActivity"/>
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>
