<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="AppTheme.CircularProgress">
        <item name="circularProgressBarStyle">@style/FamilyLink.CircularProgressBarLight</item>
    </style>

    <style name="TextAppearance.AppTheme" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/default_text_color</item>
    </style>
    <style name="TextAppearance.AppTheme.ListItem">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.AppTheme.ListItem.Strong">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.AppTheme.ListItem.Weak">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FamilyLink.CircularProgressBarLight" parent="@style/CircularProgressBarLight">
        <item name="progress_color">@android:color/holo_red_light</item>
    </style>

</resources>
