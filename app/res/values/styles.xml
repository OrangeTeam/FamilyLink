<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TextAppearance.AppTheme" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/default_text_color</item>
    </style>
    <style name="TextAppearance.AppTheme.ListItem">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.AppTheme.ListItem.Weak">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/weak_text_color</item>
    </style>

     <style name="AppThemeLight" parent="android:Theme.Holo.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="circularProgressBarStyle">@style/CircularProgressBarLight</item>
    </style>
</resources>
